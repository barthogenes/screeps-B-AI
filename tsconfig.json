{
	"compilerOptions": {
		"module": "esnext",
		"lib": [
			"esnext",
			"DOM"
		],
		"target": "es2017",
		"moduleResolution": "Node",
		"outDir": "dist",
		"baseUrl": "src/",
		"sourceMap": true,
		"strict": true,
		"experimentalDecorators": true,
		"noImplicitReturns": true,
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"removeComments": true,
	},
	"exclude": [
		"node_modules"
	]
}
