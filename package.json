{
	"name": "screeps-b-ai",
	"version": "3.1.0",
	"description": "",
	"private": true,
	"scripts": {
		"lint": "eslint \"src/**/*.ts\"",
		"build": "rollup -c",
		"push-main": "rollup -c --environment DEST:main",
		"push-pserver": "rollup -c --environment DEST:pserver",
		"push-season": "rollup -c --environment DEST:season",
		"push-sim": "rollup -c --environment DEST:sim",
		"test": "jest",
		"test-watch": "jest --watch",
		"test-cov": "jest --coverage",
		"watch-main": "rollup -cw --environment DEST:main",
		"watch-pserver": "rollup -cw --environment DEST:pserver",
		"watch-season": "rollup -cw --environment DEST:season",
		"watch-sim": "rollup -cw --environment DEST:sim",
		"start-private-server": "docker-compose up -d",
		"open-private-server-cli": "docker-compose exec screeps screeps-launcher cli",
		"prepare": "husky install",
		"commit": "cz",
		"release": "standard-version"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/barthogenes/screeps-B-AI.git"
	},
	"author": "Bart Hogenes",
	"license": "Unlicense",
	"bugs": {
		"url": "https://github.com/barthogenes/screeps-B-AI/issues"
	},
	"homepage": "https://github.com/barthogenes/screeps-B-AI#readme",
	"engines": {
		"node": "10.x || 12.x"
	},
	"devDependencies": {
		"@rollup/plugin-buble": "^0.21.3",
		"@rollup/plugin-commonjs": "^21.0.3",
		"@rollup/plugin-multi-entry": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.0.4",
		"@rollup/plugin-typescript": "^8.3.1",
		"@types/jest": "^27.4.1",
		"@types/lodash": "^4.14.181",
		"@types/node": "^17.0.23",
		"@types/screeps": "^3.2.3",
		"@typescript-eslint/eslint-plugin": "^5.18.0",
		"@typescript-eslint/parser": "^5.18.0",
		"@typescript-eslint/typescript-estree": "^5.18.0",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.13.0",
		"eslint-import-resolver-typescript": "^2.7.1",
		"eslint-plugin-import": "^2.24.0",
		"husky": "^7.0.0",
		"jest": "^27.5.1",
		"rollup": "^2.56.2",
		"rollup-plugin-clear": "^2.0.7",
		"rollup-plugin-screeps": "^1.0.1",
		"standard-version": "^9.3.2",
		"ts-jest": "^27.1.4",
		"ts-node": "^10.2.0",
		"tsconfig-paths": "^3.10.1",
		"tslint-eslint-rules": "^5.4.0",
		"typescript": "^4.3.5"
	},
	"dependencies": {
		"lodash": "^4.17.21",
		"source-map": "~0.6.1"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
		}
	}
}
